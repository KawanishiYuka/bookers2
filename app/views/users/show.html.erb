<%= render 'books/list', user: @user, book: @book %>



<h2>Books</h2>

<% @books.each do |book| %>
<div>
  <%= link_to user_path(book.user.id) do %>
  <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
  <% end %>

  <p>Title：<%= link_to book.title, book_path(book.id)  %></p>
  <p>Opinion：<%= book.body %></p>
</div>

<% end %>
<%= paginate @books %>