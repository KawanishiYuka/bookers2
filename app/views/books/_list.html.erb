<div>

<h2>User info</h2>
  <p><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></p>
  <h4>name <%= user.name %></h4>
  <h4>introduction <%= user.introduction %></h4>

</div>

  <li>
    <%= link_to 'My Page', edit_user_path(user.id) %>
  </li>
  
<h2>New book</h2>

<%= form_with model: book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>