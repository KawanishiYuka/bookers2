<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 mx-auto">
        <h1>Editing Book</h1>
        
        <% if @book_detail.errors.any? %>
          <%= pluralize(@book_detail.errors.count, "error") %> prohibited this book from being saved:<br>
          <% @book_detail.errors.full_messages.each do |message| %>
            <%= message %><br>
          <% end %>
        <% end %>
        
        <%= form_with model:@book_detail, local:true do |f| %>
          <div class="form-group">
           <label for="book_title">Title</label>
           <%= f.text_field :title, class: "form-control" %>
          </div>
          
          <div class="form-group">
           <label for="book_opinion">Opinion</label>
           <%= f.text_area :body, class: "form-control" %>
          </div>
          
          <div class="form-group">
            <%= f.submit 'Update Book!', class: "btn btn-outline-success" %>
          </div>
        <% end %>
        
        <%= link_to 'Show', book_path(@book_detail) %>
        <span>|</span>
        <%= link_to 'Back', books_path %>
      </div>
    </div>
  </div>
</main>


