<h2>User info</h2>
  <div>
  <h3><%= @user.name %></h3>
  <h3><%= @user.introduction %></h3>
  
</div>

  <li>
    <%= link_to 'My Page', edit_user_path(current_user.id) %>
  </li>
  
<h2>New book</h2>

<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>