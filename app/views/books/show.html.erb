<%= render 'books/list', user: @user, book: @book %>


<h2>Book detail</h2>

<div>
  <%= link_to user_path(@user) do %>
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
  <% end %>
  <%= link_to @user.name, user_path(@user)  %>
  
  <p>Title：<%= link_to @book_detail.title, book_path(@book_detail)  %></p>
  <p>Opinion：<%= @book_detail.body %></p>
  
  <% if @user.id == current_user.id %>
   <%= link_to 'Edit', edit_book_path(@book_detail) %>
   <%= link_to 'Destroy', book_path(@book_detail), method: :delete, "data-confirm" => "本当に消しますか？" %>
  <% end %>
  
</div>

