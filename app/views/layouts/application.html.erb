<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
    <header>
      <nav class= "navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
        
        <% if user_signed_in? %>
        　<p class="navbar-brand">
          <%= link_to "Bookers", root_path %></p>
          
          <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
           <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
            <li class="nav-item">
             <%= link_to "Home", user_path(current_user.id) %></li>
        　   <li class="nav-item">
        　    <%= link_to "Users", users_path %></li>
        　   <li class="nav-item">
          　 <%= link_to "Books", books_path %></li>
        　   <li class="nav-item">
        　    <%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
        　  </ul>
        　</div>
      <% else %>
          
          <%= link_to "Bookers", root_path %>
          
          <%= link_to "Home", root_path %>
          
          <%= link_to "About", home_about_path %>
          
          <%= link_to "Sign up", new_user_registration_path %>
          
          <%= link_to "Log in", new_user_session_path %>
          
      <% end %>
      </div>
      </nav>
    </header>
    
    <% flash.each do |key, value| %>
     <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>
    
    <%= yield %>
    
    <footer>
      <p>CopyRight Infratop.inc</p>
    </footer>
    
  </body>
</html>
